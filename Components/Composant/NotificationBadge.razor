@code {
    [Parameter] public long Count { get; set; }
    [Parameter] public string BgClass { get; set; } = "bg-danger";
    [Parameter] public string? Clazz { get; set; }
}
@if (Count > 0)
{
    <span class="badge rounded-pill notification-badge @BgClass @Clazz">@Count</span>
}

<style>
.notification-badge {
    min-width: 20px;
    height: 20px;
    padding: 0 6px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 500;
    line-height: 1;
}
</style> 