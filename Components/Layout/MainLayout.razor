@inherits LayoutComponentBase
<BlazoredToasts />
<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4 py-2 d-flex align-items-center justify-content-between bg-dark">
            <div class="d-flex align-items-center">
                <UserSearch />
            </div>
            <div>
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-light text-decoration-none">
                    <i class="bi bi-info-circle me-1"></i>About
                </a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>